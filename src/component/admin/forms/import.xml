<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field
            name="source_cms"
            type="list"
            label="COM_CMSMIGRATOR_FIELD_SOURCE_CMS_LABEL"
            class="form-select"
            default="">
            <option value="">COM_CMSMIGRATOR_FIELD_SOURCE_CMS_SELECT</option>
            <option value="wordpress">WordPress</option>
            <option value="json">JSON</option>
        </field>

        <field
            name="import_file"
            type="file"
            label="COM_CMSMIGRATOR_FIELD_IMPORT_FILE_LABEL"
            class="form-control"
            accept=".xml,.json"
        />

        <field
            name="source_url"
            type="url"
            label="COM_CMSMIGRATOR_FIELD_SOURCE_URL_LABEL"
            description="COM_CMSMIGRATOR_FIELD_SOURCE_URL_DESC"
            class="form-control"
            filter="url"
        />

        <field
            name="enable_media_migration"
            type="radio"
            label="COM_CMSMIGRATOR_FIELD_ENABLE_MEDIA_MIGRATION_LABEL"
            description="COM_CMSMIGRATOR_FIELD_ENABLE_MEDIA_MIGRATION_DESC"
            class="btn-group btn-group-yesno"
            default="0">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
            name="connection_type"
            type="list"
            label="COM_CMSMIGRATOR_FIELD_CONNECTION_TYPE_LABEL"
            description="COM_CMSMIGRATOR_FIELD_CONNECTION_TYPE_DESC"
            class="form-select"
            default="ftp"
            showon="enable_media_migration:1">
            <option value="ftp">COM_CMSMIGRATOR_FIELD_CONNECTION_TYPE_FTP</option>
            <option value="ftps">COM_CMSMIGRATOR_FIELD_CONNECTION_TYPE_FTPS</option>
            <option value="sftp">COM_CMSMIGRATOR_FIELD_CONNECTION_TYPE_SFTP</option>
            <option value="zip">COM_CMSMIGRATOR_FIELD_CONNECTION_TYPE_ZIP</option>
        </field>

        <field
            name="ftp_host"
            type="text"
            label="COM_CMSMIGRATOR_FIELD_FTP_HOST_LABEL"
            description="COM_CMSMIGRATOR_FIELD_FTP_HOST_DESC"
            class="form-control"
            showon="enable_media_migration:1[AND]connection_type:ftp,ftps,sftp"
        />

        <field
            name="ftp_port"
            type="number"
            label="COM_CMSMIGRATOR_FIELD_FTP_PORT_LABEL"
            description="COM_CMSMIGRATOR_FIELD_FTP_PORT_DESC"
            class="form-control"
            default="21"
            showon="enable_media_migration:1[AND]connection_type:ftp,ftps,sftp"
        />

        <field
            name="ftp_username"
            type="text"
            label="COM_CMSMIGRATOR_FIELD_FTP_USERNAME_LABEL"
            description="COM_CMSMIGRATOR_FIELD_FTP_USERNAME_DESC"
            class="form-control"
            showon="enable_media_migration:1[AND]connection_type:ftp,ftps,sftp"
        />

        <field
            name="ftp_password"
            type="password"
            label="COM_CMSMIGRATOR_FIELD_FTP_PASSWORD_LABEL"
            description="COM_CMSMIGRATOR_FIELD_FTP_PASSWORD_DESC"
            class="form-control"
            showon="enable_media_migration:1[AND]connection_type:ftp,ftps,sftp"
        />

        <field
            name="ftp_passive"
            type="radio"
            label="COM_CMSMIGRATOR_FIELD_FTP_PASSIVE_LABEL"
            description="COM_CMSMIGRATOR_FIELD_FTP_PASSIVE_DESC"
            class="btn-group btn-group-yesno"
            default="1"
            showon="enable_media_migration:1[AND]connection_type:ftp,ftps">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
            name="media_zip_file"
            type="file"
            label="COM_CMSMIGRATOR_FIELD_MEDIA_ZIP_FILE_LABEL"
            description="COM_CMSMIGRATOR_FIELD_MEDIA_ZIP_FILE_DESC"
            class="form-control"
            accept=".zip"
            showon="enable_media_migration:1,connection_type:zip"
        />

        <field
            name="media_storage_mode"
            type="radio"
            label="COM_CMSMIGRATOR_FIELD_MEDIA_STORAGE_MODE_LABEL"
            description="COM_CMSMIGRATOR_FIELD_MEDIA_STORAGE_MODE_DESC"
            class="btn-group"
            default="root"
            showon="enable_media_migration:1">
            <option value="root">COM_CMSMIGRATOR_FIELD_MEDIA_STORAGE_MODE_ROOT</option>
            <option value="custom">COM_CMSMIGRATOR_FIELD_MEDIA_STORAGE_MODE_CUSTOM</option>
        </field>

        <field
            name="media_custom_dir"
            type="text"
            label="COM_CMSMIGRATOR_FIELD_MEDIA_CUSTOM_DIR_LABEL"
            description="COM_CMSMIGRATOR_FIELD_MEDIA_CUSTOM_DIR_DESC"
            class="form-control"
            showon="media_storage_mode:custom"
        />

        <field
            name="import_as_super_user"
            type="radio"
            label="COM_CMSMIGRATOR_FIELD_IMPORT_AS_SUPER_USER_LABEL"
            description="COM_CMSMIGRATOR_FIELD_IMPORT_AS_SUPER_USER_DESC"
            class="btn-group btn-group-yesno"
            default="0">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
    </fieldset>
</form>